<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.personaluser.home.finddonor.FindDonorActivity">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="@string/hint_edt_bloodtype"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/ic_baseline_bloodtype_24">

        <AutoCompleteTextView
            android:id="@+id/spinner_bloodtype_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:paddingVertical="16dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_broadcast_to_other_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Broadcast Request ke user lain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" />

    <TextView
        android:id="@+id/text_Or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Atau"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_broadcast_to_other_user"
        app:layout_constraintStart_toStartOf="@+id/btn_broadcast_to_other_user"
        app:layout_constraintTop_toBottomOf="@+id/btn_broadcast_to_other_user"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_request"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/btn_txt_check_supply"
        app:layout_constraintEnd_toEndOf="@+id/btn_broadcast_to_other_user"
        app:layout_constraintStart_toStartOf="@+id/btn_broadcast_to_other_user"
        app:layout_constraintTop_toBottomOf="@+id/text_Or" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_supply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_request"
        app:layout_constraintVertical_bias="0.0" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rv_supply"
        app:layout_constraintEnd_toEndOf="@+id/rv_supply"
        app:layout_constraintStart_toStartOf="@+id/rv_supply"
        app:layout_constraintTop_toTopOf="@+id/rv_supply" />

</androidx.constraintlayout.widget.ConstraintLayout>